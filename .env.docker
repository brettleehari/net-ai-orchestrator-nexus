# Environment variables for Docker deployment
NODE_ENV=production
TZ=UTC

# Redis configuration (if using Redis service)
REDIS_PASSWORD=your_secure_redis_password_here

# Application configuration
APP_NAME=Dual Intelligence Autonomous Network Operator
APP_VERSION=1.0.0

# Logging
LOG_LEVEL=info

# Security
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Optional: SSL configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Optional: External API configurations
# API_BASE_URL=https://your-api-server.com
# API_TIMEOUT=30000

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_ID=your_analytics_id_here
